<p id="notice"><%= notice %></p>

<div class="breadcrumb-trail">
  <%= react_component('Breadcrumb', {name: @product.category.name, url: category_url(@product.category)}, prerender: true) %>
  &gt;
  <%= react_component('Breadcrumb', {name: @product.type.name, url: type_url(@product.type)}, prerender: true) %>
</div>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
